package Assignment;
import java.util.Scanner;
public class Assignment2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
    Scanner in = new Scanner (System.in);
    		
    	int items;
    	int price1;
    	int qtty1;
    	int price2;
    	int qtty2;
    	int price3;
    	int qtty3;
    	
    	
    	double discount;
    	double price;
    	double discount1;
    	double totalprice;
    	double discount2;
    	double discount3;

    	
       
        System.out.print("Enter the number of items: ");
    	items = in.nextInt();
    	System.out.print("Enter price of the first item:RM ");
    	price1= in.nextInt();
    	System.out.print("Enter quantity of first item: ");
    	qtty1 = in.nextInt();
    	
    	System.out.println();
    	
    	System.out.print("Enter price of the second item:RM ");
    	price2= in.nextInt();
    	System.out.print("Enter quantity of second item: ");
    	qtty2 = in.nextInt();
    	
    	System.out.println();
    	
    	System.out.print("Enter price of the third item:RM ");
    	price3= in.nextInt();
    	System.out.print("Enter quantity of third item: ");
    	qtty3 = in.nextInt();
    	
    	
    		
    	
    	totalprice = (price1*qtty1)+(price2*qtty2)+(price3*qtty3);
 
    	discount =  (0.2)*totalprice;
    	discount1= totalprice -discount;
    	discount2=  (0.9)*totalprice;
    	discount3= totalprice-discount2;
    	System.out.println();
    	
    	System.out.println("Total price:RM " + totalprice);
    	
    	if (totalprice>=100) {
    		
    		System.out.println("Discount received:RM " + discount);
    	    System.out.println("Price to be paid:RM " + discount1);
    	}
    	else {
    		System.out.print("Discount received:RM " + discount2);
    	    System.out.print("Price to be paid:RM " + discount3);
    	    
    	}
    	
    	
    		
    		
    	
    	
    	
    		
    		
	}

}
